<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Quick_Launch_Bar.UI.Pages.Settings.DashBoard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Quick_Launch_Bar.UI.Pages.Settings"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="22"
          RowSpacing="24"
          ColumnSpacing="30">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Background="{StaticResource LayerFillColorAltBrush}"
              CornerRadius="8">
            <Button HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="Transparent"
                    Click="Button_Click"/>
            <Grid Padding="18">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>


                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}"
                    Text="全局侧边栏"
                    FontWeight="Bold"
                    VerticalAlignment="Center"/>

                <ToggleSwitch Grid.Column="2"
                              OffContent=""
                              OnContent=""
                              VerticalAlignment="Center"
                              IsOn="{x:Bind SwitchViewModel.DefaultSettings.SideBar}"
                              Toggled="ToggleSwitch_Toggled"
                              x:Name="SiTo"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
